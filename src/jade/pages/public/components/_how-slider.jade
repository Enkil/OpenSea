// How? slider
section(data-ng-init="how = {}; how.text = 'ship'").how-slider
    .container
        .row
            .column.-xs-12
                h2.landing-title.-white How OpenSea finds me a cargo.&nbsp;
                    a(href="javascript:void(0)" title="Ship/Cargo"
                        data-ng-click="how.text = how.text === 'ship' ? 'cargo' : 'ship'").cargo-ship Or {{how.text}}
        .row
            .column.-xs-12
                // Tabs
                div(role="tablist").slider-tabs
                    div(role="tab" id="addopenposition-tab" aria-controls="addopenposition" aria-expanded="true" href="javascript:void(0)" title="Add open position").tab.-active
                        span Add open position
                    div(role="tab" id="selectbestmatch-tab" aria-controls="selectbestmatch" aria-expanded="false" href="javascript:void(0)" title="Select best match").tab
                        span Select best match
                    div(role="tab" id="fixit-tab" aria-controls="fixit" aria-expanded="false" href="javascript:void(0)" title="Fix it").tab
                        span Fix it
                    div(role="tab" id="getfeedback-tab" aria-controls="getfeedback" aria-expanded="false" href="javascript:void(0)" title="Get feedback").tab
                        span Get feedback
            .column.-xs-12
                // Slider
                .slider-how
                    // Slider arrows
                    .arrows._sm-hidden-down
                        button.prev
                            svg
                                use(xlink:href="#arrow")
                        button.next
                            svg
                                use(xlink:href="#arrow")
                    // List of slides
                    .slides-list
                        // Slide
                        div(role="tabpanel" id="addopenposition" aria-labelledby="addopenposition-tab").slide.-active
                            img(src="../../img/pics/2хVessel_Add_open_position_white_background.png" alt="Add open position" title="Add open position")
                        // Slide
                        div(role="tabpanel" id="selectbestmatch" aria-labelledby="selectbestmatch-tab").slide
                            img(src="../../img/pics/2хCargo_Select_best_match_white_background.png" alt="Select best match" title="Select best match")
                        // Slide
                        div(role="tabpanel" id="fixit" aria-labelledby="fixit-tab").slide
                            img(src="../../img/pics/2хCargo_Fix_it_white_background.png" alt="Fix it" title="Fix it")
                        // Slide
                        div(role="tabpanel" id="getfeedback" aria-labelledby="getfeedback-tab").slide
                            img(src="../../img/pics/2хVessel_Leave_feedback_white_background.png" alt="Get feedback" title="Get feedback")
